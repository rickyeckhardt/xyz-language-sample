Box('mainContainer', {
    padding: '10px'
    display: 'flex',
    justify-content: 'center',
    align-items: 'center'
    height: '100vh',
    width: '100vw',
    flex-direction: 'column'
}) {
    Text('heading', {
        dataUrl: 'https://swapi.dev/api/people/1, take: name',
        font-size: '1.2rem',
        margin: '10px 0px'
    }) {
        text: 'Hi, {{ name }}'
    }
    Link('websiteLink', {
        href: 'https://www.example.com'
        padding: '20px',
        border: '1px solid grey',
        border-radius: '5px',
        box-shadow: '4px 4px 0 lightgrey'
    }) {
        text: 'Hello XYZ!'
    }
}